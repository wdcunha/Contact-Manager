<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td>
          <%= "#{person.first_name} #{person.last_name}" %>
        </td>
        <td>
          <ul class="actions">
            <li><%= link_to 'Show', person %></li>
            <li><%= link_to 'Edit', edit_person_path(person) %></li>
            <li><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

